{
  "name": "openclaw-github-app",
  "version": "0.1.0",
  "description": "AI-powered GitHub bot running on GitHub Actions",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@actions/* --external:@anthropic-ai/*",
    "watch": "npm run build -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["github-actions", "ai", "bot", "openclaw"],
  "author": "offloadmywork",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.32.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  }
}
